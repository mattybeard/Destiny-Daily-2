@model DestinyDaily2.Models.NightfallModel
@{
    Layout = null;
}

<a id="nightfall"><span class="is-vhidden">This week's Nightfall</span></a>
<section class="js-homepage-section">
    <div class="content-center content-center--gutter">
        <div class="prose">
            <h1>Still to come</h1>
            <p>Destiny Daily is still in it's early stages, but we wanted to release it as quickly as possible.</p>
            <p>New features still to come:</p>
            <ul>
                <li>Raid encounter order</li>
                <li>Meditations</li>
                <li>Flashpoint</li>
                <li>All challenges</li>
                <li>Treasure maps</li>
            </ul>
        </div>

        <a href="/nightfall" class="heading">
            <h2 class="heading__title">This week's Nightfall</h2>
        </a>
    </div>
    <template class="js-homepage-section-template">
        <div class="heading">
            <h1 class="heading__title">This week's Nightfall</h1>
        </div>
        <div class="activity activity--nightfall">
            <div class="activity__header">
                <div class="content-center content-center--gutter">
                    <div aria-hidden="true" class="activity__icon">
                        <div class="icon icon--nightfall"></div>
                    </div>
                    <div class="activity__details">
                        <h2 class="activity__type">Weekly Nightfall Strike</h2>
                        <p class="activity__name">@Model.Nightfall.Name</p>
                        <p class="is-vhidden"></p>
                    </div>
                </div>
            </div>
            <div data-external-background-image="data-external-background-image" data-external-src="@($"https://www.bungie.net/{Model.Nightfall.PgcrIcon}")" class="activity__image"></div>
            <div class="activity__extras">
                <div class="content-center content-center--gutter">
                    <div class="grid grid--gutterless">
                        <div class="grid__item tablet-one-half">
                            <div class="activity__extra">
                                <h3 class="activity__subheading is-vhidden">Modifiers</h3>
                                <ul>
                                    @foreach (var modifier in Model.Nightfall.Modifiers)
                                    {
                                        <li title="@modifier.Name" class="skull">
                                            @if (!string.IsNullOrEmpty(modifier.Icon))
                                            {
                                                <img data-external-image="data-external-image" data-external-src="@($"https://www.bungie.net/{modifier.Icon}")" width="60" height="60" alt="@modifier.Name icon" class="skull__icon"/>
                                            }
                                            <div class="skull__details">
                                                <div class="skull__title">@modifier.Name</div>
                                                <div class="skull__description">@modifier.Description</div>
                                            </div>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                        <div class="grid__item tablet-one-half">
                            <div class="activity__extra">
                                <h3 class="activity__subheading">Challenges</h3>
                                <ul>
                                    @foreach (var challenge in Model.Nightfall.Challenges)
                                    {
                                        <li title="@challenge.Name" class="skull">
                                            <div class="skull__details">
                                                <div class="skull__title">@challenge.Name</div>
                                                <div class="skull__description">@challenge.Description</div>
                                            </div>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                        <div class="grid__item tablet-one-half">
                            <div class="activity__extra">
                                <h3 class="activity__subheading">Rewards</h3>
                                <ul>
                                    <li title="Powerful Gear" class="reward">
                                        <img data-external-image="data-external-image" data-external-src="@($"https://www.bungie.net/common/destiny2_content/icons/350c8a864958c0d8af1344fd0cdc37ba.png")" alt="Reward Icon" class="reward__image"/>
                                        <div class="reward__details">
                                            <div class="reward__title">Powerful Gear</div>
                                        </div>
                                    </li>
                                </ul>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @Html.Partial("Partials/BackToTop")
    </template>
</section>
